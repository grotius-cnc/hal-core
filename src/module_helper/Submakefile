ifneq ("$(RTPREFIX)","sim")
MODULE_HELPERSRCS := \
	module_helper/module_helper.c
USERSRCS += $(MODULE_HELPERSRCS)

ifneq ($(rip_moduledir),)
    $(call TOOBJSDEPS, $(MODULE_HELPERSRCS)) : EXTRAFLAGS = -Wall -Werror 
else
    $(call TOOBJSDEPS, $(MODULE_HELPERSRCS)) : EXTRAFLAGS = -Wall -Werror 
endif

../bin/module_helper: $(call TOOBJS, $(MODULE_HELPERSRCS))
	$(ECHO) Linking $(notdir $@) 
	@$(CC) -o $@ $^

TARGETS += ../bin/module_helper
endif
